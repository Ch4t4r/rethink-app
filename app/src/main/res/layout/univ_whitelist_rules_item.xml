<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/am_apk_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:layout_marginBottom="1dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

        <RelativeLayout
            android:id="@+id/univ_whitelist_rules_container"
            android:layout_width="match_parent"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/univ_whitelist_rules_apk_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/univ_whitelist_rules_delete_btn"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:text="Dummy Label"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/large_font_text_view" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:id="@+id/univ_whitelist_rules_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="delete"
                android:textSize="@dimen/large_font_text_view"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true" />

        </RelativeLayout>

</RelativeLayout>